<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <title>Carbo-Loader</title>
</head>

<body>
    <div id="background">

        <p id="nameTxt">carbo-loader</p>
        <p id="flavor-txt">carbo-loader is an application for calculating carb intake.</p>

        <!-- Show log in/ Sign up inputs -->
        {{{ body }}}

        <div id="initialBtns">
            <button id="showLogInBtn">log in</button>
            <button id="showSignUpBtn">sign up</button>
        </div>

        <!-- Sign up inputs -->
        <div id="signUpInputs">
            <p id="newUserName">user name</p>
            <input type="text" id="createUserNameInput"></input>

            <p id="newUserPw">password</p>
            <input type="text" id="createPasswordInput"></input>

            <p id="confirmPw">confirm password</p>
            <input type="text" id="confirmPasswordInput"></input>
            <button id="createAcntBtn">create account</button>
        </div>

        <!-- log in inputs -->
        <div id="logInInputs">
            <p id="logInUserName">user name</p>
            <input type="text" id="userNameInput"></input>

            <p id="logInPassword">password</p>
            <input type="text" id="passwordInput"></input>
            <button id="logInBtn">log in</button>
        </div>

        <button id="backBtn">back</button>



    </div>



    <script src="/js/index.js"></script>
</body>

</html>